{% extends "base.html.twig" %}
{% block body %}
<h1 class="mt-4">Hello Readers!</h1>
{% for post in posts %}
<div>
    <a href={{ "/post/" ~ post.id }}>
        <h3>{{ post.title }}</h3>
    </a>
    <p>{{ post.body }}</p>
    <p>{{ post.date|date('Y-m-d') }}</p>
</div>
{% endfor %}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="/" tabindex="-1">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/1": pageCount - 1}}>{{pageCount == 1 ? 1: pageCount - 1}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/2": pageCount}}>{{pageCount == 1 ? 2: pageCount}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/3": pageCount + 1}}>{{pageCount == 1 ? 3: pageCount + 1}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ "/page/" ~ (pageCount + 1)}}>Next</a>
        </li>
    </ul>
</nav>
{% endblock %}