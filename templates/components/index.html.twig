{% extends "base.html.twig" %}
{% block body %}
<h1 class="my-4">Hello Readers!</h1>
{% for post in posts %}
<div class="card mb-2">
    <div class="card-body">
        <a class="card-link" href={{ "/post/" ~ post.id }}>
            <h5 class="card-title">{{ post.title }}</h5>
        </a>
        <p class="card-text">{{ post.body }}</p>
        <p class="card-subtitle text-muted">{{ post.date|date('Y-m-d') }}</p>
    </div>
</div>
{% endfor %}
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="/" tabindex="-1">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/1": pageCount - 1}}>{{pageCount == 1 ? 1: pageCount - 1}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/2": pageCount}}>{{pageCount == 1 ? 2: pageCount}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/3": pageCount + 1}}>{{pageCount == 1 ? 3: pageCount + 1}}</a>
        </li>
        <li class="page-item">
            <a class="page-link" href={{ "/page/" ~ (pageCount + 1)}}>Next</a>
        </li>
    </ul>
</nav>
{% endblock %}