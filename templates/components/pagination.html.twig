<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% if pageCount == 1 %}
        <li class="page-item disabled">
        {% else %}
        <li class="page-item">
        {% endif %}
            <a class="page-link" href={{ "/page/" ~ (pageCount - 1)}} tabindex="-1">Previous</a>
        </li>
        {% if pageCount == 1 %}
            <li class="page-item active"><a class="page-link" href="/page/1">1</a></li>
        {% elseif pageCount == 2 %}
            <li class="page-item"><a class="page-link" href={{"/page/" ~ (pageCount - 1) }}>{{pageCount - 1 }}</a></li>
        {% elseif pageCount == maxPageCount %}
            <li class="page-item"><a class="page-link" href={{"/page/" ~ (pageCount - 2) }}>{{pageCount - 2 }}</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href={{"/page/" ~ (pageCount - 1) }}>{{pageCount - 1 }}</a></li>
        {% endif %}
        {% if maxPageCount < 2 %}
        {% elseif pageCount == 2 %}
            <li class="page-item active"><a class="page-link" href={{"/page/" ~ pageCount}}>{{ pageCount }}</a></li>
        {% elseif pageCount == maxPageCount %}
            <li class="page-item"><a class="page-link" href={{"/page/" ~ (pageCount - 1)}}>{{ pageCount - 1}}</a></li>
        {% elseif pageCount != 1 %}
            <li class="page-item active"><a class="page-link" href={{"/page/" ~ pageCount}}>{{ pageCount }}</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href={{"/page/" ~ (pageCount + 1) }}>{{ pageCount + 1 }}</a></li>
        {% endif %}

        {% if maxPageCount < 3 %}
        {% elseif pageCount == maxPageCount %}
        <li class="page-item active"><a class="page-link" href={{"/page/" ~ pageCount}}>{{pageCount}}</a></li>
        {% else %}
        <li class="page-item">
            <a class="page-link" href={{ pageCount==1 ? "/page/3": pageCount + 1}}>{{pageCount == 1 ? 3: pageCount + 1}}</a>
        </li>
        {% endif %}
        
        {% if pageCount == maxPageCount %}
        <li class="page-item disabled">
        {% else %}
        <li class="page-item">
        {% endif %}
            <a class="page-link" href={{ "/page/" ~ (pageCount + 1)}}>Next</a>
        </li>
    </ul>
</nav>